<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--自定义Toolbar-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#344166</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/toolbackground</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/toolbackground</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar1">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar2">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SettingsItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">-1.5dp</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:clickable">true</item>
    <item name="android:drawablePadding">@dimen/view_edge_5</item>
    <item name="android:drawableRight">@mipmap/ic_list_arrow_right</item>
    <item name="android:textColor">@color/colorTitle</item>
    <item name="android:textSize">@dimen/text_size_26</item>
    </style>


    <style name="Input.Login">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/view_edge_14</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="Input">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/view_edge_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTime</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textColorHint">@color/inputHint</item>
    </style>

</resources>
