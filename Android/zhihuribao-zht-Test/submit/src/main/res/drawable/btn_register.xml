<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bg_corner_radius"/>
            <stroke android:width="1px" android:color="@color/colorStroke"/>
            <solid android:color="@color/disable"/>
            <padding android:bottom="@dimen/input_padding_bottom" android:left="@dimen/input_padding_left" android:right="@dimen/input_padding_right" android:top="@dimen/input_padding_top"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bg_corner_radius"/>
            <stroke android:width="1px" android:color="@color/colorStroke"/>
            <solid android:color="@color/whiteSmoke"/>
            <padding android:bottom="@dimen/input_padding_bottom" android:left="@dimen/input_padding_left" android:right="@dimen/input_padding_right" android:top="@dimen/input_padding_top"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bg_corner_radius"/>
            <stroke android:width="1px" android:color="@color/colorStroke"/>
            <solid android:color="@color/white"/>
            <padding android:bottom="@dimen/input_padding_bottom" android:left="@dimen/input_padding_left" android:right="@dimen/input_padding_right" android:top="@dimen/input_padding_top"/>
        </shape>
    </item>
</selector>