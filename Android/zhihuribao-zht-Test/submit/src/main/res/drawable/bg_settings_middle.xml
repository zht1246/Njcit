<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:width="1dp" android:color="@color/colorStroke"/>
            <solid android:color="@color/whiteSmoke"/>
            <padding android:bottom="@dimen/view_edge_15" android:left="@dimen/view_edge_12" android:right="@dimen/view_edge_12" android:top="@dimen/view_edge_15"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:width="1dp" android:color="@color/colorStroke"/>
            <solid android:color="@color/white"/>
            <padding android:bottom="@dimen/view_edge_15" android:left="@dimen/view_edge_12" android:right="@dimen/view_edge_12" android:top="@dimen/view_edge_15"/>
        </shape>
    </item>

</selector>