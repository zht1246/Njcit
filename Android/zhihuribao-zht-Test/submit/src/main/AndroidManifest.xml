<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Asus.shixun">

    <!-- 加载网络图片或者存储空间中的图片 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.Asus.shixun.ui.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Asus.shixun.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.Asus.shixun.ui.activity.PersonActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.Asus.shixun.ui.activity.SettingActivity" />
        <activity
            android:name="com.example.Asus.shixun.ui.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name="com.example.Asus.shixun.ui.activity.DetailActivity"
            android:parentActivityName="com.example.Asus.shixun.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar1" />
        <activity
            android:name="com.example.Asus.shixun.ui.activity.RegisterActivity"
            android:parentActivityName="com.example.Asus.shixun.ui.activity.MainActivity"
            android:theme="@style/AppBaseTheme" />
        <activity android:name="com.example.Asus.shixun.ui.activity.AboutActivity"></activity>
    </application>

</manifest>